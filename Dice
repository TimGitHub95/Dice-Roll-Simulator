#Dice Rolling simulator
import random
min = 1
max = 6
n = 0
total = 0.0
print("Hello, and welcome to dice rolling simulator")

#Rolling Mechanic
roll_again = "yes"
while roll_again == "yes":
    Roll = input("Hello, would you like to roll your dice? ")
    if Roll == 'Done':
        print("Thankyou for playing, see you next time!")
        break

    print("Your die are being rolled")
    x = print("Your first dice is:", random.randint(min,max))
    y = print("Your second dice is:",random.randint(min,max))
    n = n + 1
#Stats
    print("Here are your stats:")
    if n > 1:
        print("You have rolled", n, "times")
    if n <= 1:
        print("You have rolled", n, "time")
        
